<div class="govuk-form-group" style="display: flex; gap: 8px; align-items: center;">
  <label class="govuk-visually-hidden" for="keyword-search">Search appeals</label>

  <input class="govuk-input"
         id="keyword-search"
         name="keyword-search"
         type="text"
         autocomplete="off"
         value="{{ value | default('') }}"
         style="width: 100%;">

  <button class="govuk-button" type="submit">Search</button>
</div>